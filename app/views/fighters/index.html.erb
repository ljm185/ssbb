<p id="notice"><%= notice %></p>

<h1>EVERYONE IS HERE!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Catchphrase</th>
      <th>Clone?</th>
      <th>Series</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= fighter.name %></td>
        <td><%= fighter.catchphrase %></td>
        <td><%= fighter.clone %></td>
        <td><i><%= fighter.series.name %></i></td>
        <td><%= link_to 'Show', fighter %></td>
        <td><%= link_to 'Edit', edit_fighter_path(fighter) %></td>
        <td><%= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

